.container-fluid.mt-5
  .row.justify-content-center.h-100
    .col-md-8.col-lg-6.col-xl-4.offset-xl-1
      .text-center
        %h3.general-login-title 
          = t 'link.log_in'
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.input :phone_number,
          autofocus: true,
          input_html: { autocomplete: "phone"}
        = f.input :password,                                                                    
          input_html: { autocomplete: "current-password" }
        = f.input :remember_me, 
          as: :boolean
        = f.button :submit, t('link.log_in'), class: "btn-outline-primary"

        .text-center.text-lg-start.mt-4.pt-2
          %p.small.fw-bold.mt-2.pt-1.mb-5
            = t '.dont_have_account'
            = link_to t("link.sign_up"), new_registration_path(resource_name), class: "link-dark"

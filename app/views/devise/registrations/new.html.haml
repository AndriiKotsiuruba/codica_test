- verificate = resource.verification_code.present?
.container-fluid.mt-5
  .row.justify-content-center.h-100
    .col-md-8.col-lg-6.col-xl-4.offset-xl-1
      .text-center
        %h3.general-login-title 
          = t 'link.sign_up'
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.input :phone_number,
          input_html: { autocomplete: "tel", class: "edit_verification_link"}

        = f.input :verification_code,
          wrapper_html: { class: ('visually-hidden' unless verificate), id: "verification_code" }

        .row.mb-4
          .col-md-8.col-lg-6.col-xl-4
            = link_to verifications_path(phone_number: ""),
                      remote: true, method: "post",
                      class: "btn btn-outline-secondary visually-hidden", id: "start_verification" do
              = t '.start_verification'

        = f.input :password,                                                                    
          input_html: { autocomplete: "new-password" }

        = f.input :password_confirmation,                                                                    
          input_html: { autocomplete: "new-password" }

        = f.button :submit, "t('link.sign_up')", disabled: !verificate, class: "btn-outline-primary disable_without_verification_code"
        .text-center.text-lg-start.mt-4.pt-2
          %p.small.fw-bold.mt-2.pt-1.mb-5
            = t '.have_account'
            = link_to t('link.log_in'), new_session_path(resource_name), class: "link-dark"
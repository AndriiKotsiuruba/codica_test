%main.container
  %h1.general-title-margin
    = t '.title'
  .row
    .col-sm-5.col-xs-12.mb-4
      %legend
        = t '.phone_number'
      = render 'devise_settings/partials/phone_number_form'
    .col-sm-5.col-sm-offset-1.col-xs-12.mb-4
      %legend
        =t '.password'
      = render 'devise_settings/partials/password_form'
    .col-xs-12.mb-4
      %legend
        = t '.remove_account'
      = render 'devise_settings/partials/remove_account_form'